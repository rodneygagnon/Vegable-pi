    <div class="remodal" data-remodal-id="editPlantingModal" align="left" >
      <button class="remodal-close" data-remodal-action="close"></button>
      <h4 id="remodalTitle">Edit Planting</h4>
      <p>Change the title, crop, date, zone, ...</p><br>

      <form id="plantingForm" method="post" action="/plantings/update">

        <!--  HIDDEN FIELDS -->
        <input type="hidden" id="id" name="id"/>

        <div class="row mb-4">
          <div class="col">
            <label for="title" class="col-form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="col">
            <label for="date" class="col-form-label">Planting Date</label>
            <div class="input-group date" id="starttimepicker" data-target-input="nearest">
              <input id="date" name="date" type="text" class="form-control datetimepicker-input" data-target="#starttimepicker"/>
              <div class="input-group-append" data-target="#starttimepicker" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col">
            <label for="cid" class="col-form-label">Crop</label>
            <select  class="selectpicker form-control" id="cid" name="cid">
              <% for(var i=0; i < crops.length; i++) { %>
                <option value="<%= crops[i].id %>"><%= crops[i].name %></option>
              <% } %>
            </select>
          </div>
          <div class="col">
            <label for="sid" class="col-form-label">Zone</label>
            <select class="selectpicker form-control" id="zid" name="zid" required="" placeholder="Zone">
              <% for(var i=0; i < zones.length; i++) { %>
                <option value="<%= zones[i].id %>"><%= zones[i].name %></option>
              <% } %>
            </select>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col">
            <label for="count" class="col-form-label">Count</label>
            <input type="text" class="form-control" id="count" name="count">
          </div>
          <div class="col">
            <label for="spacing" class="col-form-label">Spacing (in)</label>
            <input type="text" class="form-control" id="spacing" name="spacing">
          </div>
        </div>

        <div class="row mb-4">
          <div class="col">
            <label for="age" class="col-form-label">Age (days, seed = 0)</label>
            <input type="text" class="form-control" id="age" name="age">
          </div>
          <div class="col">
            <label for="mad" class="col-form-label">Maximum Allowable Depletion (%)</label>
            <input type="text" class="form-control" id="mad" name="mad">
          </div>
        </div>

        <div class="d-flex">
          <div class="p-2"><button type="submit" class="btn btn-sm btn-primary">Save</button></div>
          <div class="p-2"><button type="button" class="btn btn-sm btn-outline-secondary" data-remodal-action="cancel">Cancel</button></div>
          <div class="ml-auto p-2 hide-form-button" id="delete_action"><button name="action" type="submit" class="btn btn-sm btn-outline-danger" value="delete">Delete</button></div>
        </div>
       </form>
