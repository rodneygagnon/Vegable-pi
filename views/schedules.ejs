	<script type="text/javascript">
	function initCalendar() {
			$calendar = $('#fullCalendar');

			today = new Date();
			y = today.getFullYear();
			m = today.getMonth();
			d = today.getDate();

			$calendar.fullCalendar({
					viewRender: function(view, element) {
							// We make sure that we activate the perfect scrollbar when the view isn't on Month
							if (view.name != 'month'){
									$(element).find('.fc-scroller').perfectScrollbar();
							}
					},
					header: {
						left: 'title',
						center: 'month,agendaWeek,agendaDay',
						right: 'prev,next,today'
					},
					defaultDate: today,
					selectable: true,
					selectHelper: true,
					views: {
							month: { // name of view
									titleFormat: 'MMMM YYYY'
									// other view-specific options here
							},
							week: {
									titleFormat: " MMMM D YYYY"
							},
							day: {
									titleFormat: 'D MMM, YYYY'
							}
					},
					select: function(start, end) {
							// on select we show the Sweet Alert modal with an input
							$('#editScheduleModal #editScheduleLabel').text('Create a new Schedule');
							$('#editScheduleModal #title').val("");
							$('#editScheduleModal #start').val(moment(start).format('MM/DD/YYYY hh:mm A'));
							$('#editScheduleModal #end').val(moment(end).format('MM/DD/YYYY hh:mm A'));

							$('#editScheduleModal').modal('show');
							$('#editScheduleModal #delete_action').toggleClass("hidden");

					},
					eventClick: function(event, jsEvent, view) {
						$('#editScheduleModal #editScheduleLabel').text('Update a Schedule');
						$('#editScheduleModal #title').val(event.title);
						$('#editScheduleModal #id').val(event.id);
						$('#editScheduleModal #sid').val(event.sid);
						$('#editScheduleModal #start').val(moment(event.start).format('MM/DD/YYYY hh:mm A'));
						$('#editScheduleModal #end').val(moment(event.end).format('MM/DD/YYYY hh:mm A'));
						$('#editScheduleModal #repeatDow').selectpicker('val', event.repeatDow);
						$('#editScheduleModal #repeatEnd').val(moment(event.repeatEnd).format('MM/DD/YYYY'));

						$('#editScheduleModal').modal('show');
						$('#editScheduleModal #delete_action').toggleClass("hidden");
					},
					editable: true,
					eventLimit: true, // allow "more" link when too many events

					// color classes: [ event-blue | event-azure | event-green | event-orange | event-red ]
					events: {
					    url: '/schedules/getSchedules',
					    type: 'GET',
					}
				});
	}
	</script>

